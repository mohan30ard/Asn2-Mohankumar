<div class="card-container">
    {{#each movies}}
    {{#if (hasMetascore Metascore)}}
    <div class="card">
        <img src="{{Poster}}" alt="Poster of {{Title}}" />
        <h3>{{Title}}</h3>
        <p><strong>Year:</strong> {{Year}}</p>
        <p><strong>Genre:</strong> {{Genre}}</p>
        <p><strong>Rating:</strong> {{Rated}}</p>
        <p><strong>ID:</strong> {{Movie_ID}}</p>
        <p><strong>Plot:</strong> {{Plot}}</p>
        <p><strong>MetaScore:</strong>{{Metascore}}</p>
    </div>
    {{/if}}
    {{/each}}
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content:
            space-around;
        margin: 20px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius:
            5px;
        margin: 10px;
        padding: 10px;
        width: 250px;
        /* Set width for card */
        text-align: center;
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);
    }

    .card img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .card h3 {
        font-size:
            1.2em;
        margin: 10px 0;
    }

    .card p {
        font-size: 0.9em;
        color: #555;
    }
</style>